<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <util.MyCustomTextView_Bold
                android:id="@+id/text_sno"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="sn"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_calltype"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Call Type"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_date"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Date"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginLeft="-5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_client"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Client"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_location"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Location"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_contactno"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Contact No."
                android:textColor="@color/black"
                android:layout_marginLeft="-5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_followupdate"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:text="Follow Up Date"
                android:textColor="@color/black"
                android:layout_marginLeft="-5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_employee"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="Employee"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"/>

            <util.MyCustomTextView_Bold
                android:id="@+id/text_status"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Status"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"/>

            <ImageButton
                android:id="@+id/img_eye_view"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#FF909090"
                android:padding="2dip" />
        </TableRow>

    </TableLayout>

</LinearLayout>