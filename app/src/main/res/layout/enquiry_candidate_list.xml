<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <include
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

<!--                <util.MyCustomTextView_Bold-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Enquiry Candidate List"-->
<!--                    android:layout_marginLeft="@dimen/_10sdp"-->
<!--                    android:layout_marginRight="@dimen/_10sdp"-->
<!--                    android:layout_marginTop="@dimen/_10sdp"-->
<!--                    android:layout_marginBottom="@dimen/_5sdp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:gravity="center"-->
<!--                    android:textSize="@dimen/_18sdp"-->
<!--                    android:textColor="@color/greenone"/>-->

                <Button
                    android:id="@+id/btn_newenquiryform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="New Enquiry Form"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/mustard_yellow"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="@color/white"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/btn_blue">

                            <util.MyCustomTextView_Bold
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:text="S.No"
                                android:textColor="@color/white"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:text="Call Type"
                                android:textColor="@color/white"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="-5dp"
                                android:gravity="center"
                                android:text="Date"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <util.MyCustomTextView_Bold
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:text="Client"
                                android:textColor="@color/white"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="180dp"
                                android:layout_height="35dp"
                                android:text="Location"
                                android:textColor="@color/white"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:text="Contact No."
                                android:textColor="@color/white"
                                android:layout_marginLeft="-5dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="220dp"
                                android:layout_height="35dp"
                                android:text="Follow Up Date"
                                android:textColor="@color/white"
                                android:layout_marginLeft="-5dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="160dp"
                                android:layout_height="35dp"
                                android:text="Employee"
                                android:textColor="@color/white"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:text="Status"
                                android:textColor="@color/white"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textSize="16dp"/>

                            <util.MyCustomTextView_Bold
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:text="Action"
                                android:textColor="@color/white"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textSize="16dp"/>

                        </TableRow>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyview_costlist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </TableLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greenone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <util.ScrollTextView
                android:id="@+id/scrolltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="TSDPS Website"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>